PORT=3000
NODE_ENV=production

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/jewside
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jewside?retryWrites=true&w=majority

